
@using ToDoApp.Web.Helpers
@if (Request.IsAuthenticated)
{
<div class="aside-menu-wrapper flex-column-fluid" id="kt_aside_menu_wrapper">
    <!--begin::Menu Container-->
    <div id="kt_aside_menu" class="aside-menu my-4" data-menu-vertical="1" data-menu-scroll="1" data-menu-dropdown-timeout="500">
        <!--begin::Menu Nav-->
        <ul class="menu-nav" ng-controller="menuController">
            @if (CommonUtility.IsSuperAdmin)
            {
                <li class="menu-item" ng-class="{'menu-item-active': activeLink=='Home'}" aria-haspopup="true" ng-click="activeLink='Home'">
                    <a href="#/dashboard" class="menu-link">
                        <i class="menu-icon flaticon2-architecture-and-city"></i>
                        <span class="menu-text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu" ng-class="{'menu-item-active': activeLink=='MyClients'}" ng-click="activeLink='MyClients'" aria-haspopup="true" data-menu-toggle="hover">
                    <a href="#/my-clients" class="menu-link">
                        <i class="menu-icon flaticon2-analytics-1"></i>
                        <span class="menu-text">Clients</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu" ng-class="{'menu-item-active': activeLink=='Employee'}" ng-click="activeLink='Employee'" aria-haspopup="true" data-menu-toggle="hover">
                    <a href="#/employee-list" class="menu-link">
                        <i class="menu-icon flaticon2-console"></i>
                        <span class="menu-text">Employee's</span>
                    </a>
                </li>

            }
            else if (CommonUtility.IsAdmin)
            {

                <li class="menu-item"  ng-class="{'menu-item-active': activeLink=='Home'}" ng-click="activeLink='Home'" aria-haspopup="true">
                    <a href="#/dashboard" class="menu-link">
                        <i class="menu-icon flaticon2-architecture-and-city"></i>
                        <span class="menu-text">@CommonUtility.UserLanguageMenu.Dashboard</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu" ng-class="{'menu-item-active': activeLink=='Task'}" ng-click="activeLink='Task'" aria-haspopup="true" ng-show="myCompany.IsShowTaskMenu" data-menu-toggle="hover">
                    <a href="#/task-list" class="menu-link">
                        <i class="menu-icon flaticon2-analytics-1"></i>
                        <span class="menu-text">@CommonUtility.UserLanguageMenu.Tasks</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu" ng-class="{'menu-item-active': activeLink=='Leave'}" ng-click="activeLink='Leave'" ng-show="myCompany.IsShowLeaveMenu" aria-haspopup="true" data-menu-toggle="hover">
                    <a href="#/leave-list" class="menu-link">
                        <i class="menu-icon flaticon2-console"></i>
                        <span class="menu-text">@CommonUtility.UserLanguageMenu.Leaves</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu"  ng-class="{'menu-item-active': activeLink=='Report'}" ng-click="activeLink='Report'" aria-haspopup="true" data-menu-toggle="hover">
                    <a href="#/reports" class="menu-link">
                        <i class="menu-icon flaticon-notes"></i>
                        <span class="menu-text">@CommonUtility.UserLanguageMenu.Reports</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu"  ng-class="{'menu-item-active': activeLink=='Employee'}" ng-click="activeLink='Employee'" aria-haspopup="true" data-menu-toggle="hover">
                    <a href="#/employee-list" class="menu-link">
                        <i class="menu-icon flaticon-users"></i>
                        <span class="menu-text">@CommonUtility.UserLanguageMenu.Employees</span>
                    </a>
                </li>
                <li class="menu-item menu-item-submenu"  ng-class="{'menu-item-active': activeLink=='CompanyAgent'}" ng-click="activeLink='CompanyAgent'" aria-haspopup="true" data-menu-toggle="hover">
                    <a href="#/company-agent-list" class="menu-link">
                        <i class="menu-icon fas fa-archway"></i>
                        <span class="menu-text">@CommonUtility.UserLanguageMenu.Company</span>
                    </a>
                </li>
            }

        </ul>
        <!--end::Menu Nav-->
    </div>
    <!--end::Menu Container-->
</div>
}